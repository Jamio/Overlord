["Terminate", [player]] call BIS_fnc_EGSpectator;


//*************************************************************************
//                ON PLAYER SPAWN
//*************************************************************************
[] spawn OL_fnc_player_onSpawn;



//*********************************************************************************
//
//                CHECK RESPAWN PHASE  / SET POS
//
//*********************************************************************************
//*************************************************************************
//                CHECK IF MISSION STARTED (EXIT WITH)
//*************************************************************************
if ( OL_respawn_phase == 0 ) exitWith { player setPos [-3570.24,-39.7821,0]; };

//*************************************************************************
//                SPAWN IN PLANE
//*************************************************************************
waitUntil { sleep 0.1; (OL_respawn_enabled) && (({alive _x} count OL_respawn_planes) > 0) };

_plane = selectRandom OL_respawn_planes;
[player,_plane] remoteExec ["moveInCargo",player];

//*************************************************************************
//                ZEUS
//*************************************************************************
{[_x,[[player],true]] remoteExec ["addCuratorEditableObjects",0]; } forEach allCurators; 





